{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
